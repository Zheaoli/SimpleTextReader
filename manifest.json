{
    "manifest_version": 2,
    "name": "易笺",
    "description": "Simple Text Reader",
    "version": "1.0",
    "background": {
        "scripts": ["./scripts/chrome_extension.js"]
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "browser_action": {
        "default_icon": "images/icon.png"
    },
    "permissions": ["activeTab", "storage"]
}
